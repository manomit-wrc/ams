<section class="content-header">
  <h1>
    Budget Code
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin/dashboard">Dashboard</a></li>
    <li class="active">Budget Code - Add</li>

  </ol>
</section>

<section class="content">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">

              <li class="active"><a href="#settings" data-toggle="tab">Budget Code - Add</a></li>
            </ul>
            <div class="tab-content">

              	{{#if error_message}}
              	<div class="alert alert-danger" id="result77">
              	{{error_message}}
              	</div>
              	{{/if}}
               <div class="tab-pane active" id="settings">
                <form name="frmBudget" id="frmBudget" method="post" action="/admin/budgetcode/add" class="form-horizontal">

                  <div class="form-group ">
                    <label class="col-sm-2 control-label">Budget Code Type</label>
                          <div class="col-sm-10">
                              <select class="form-control" name="budget_code_type_id" id="budget_code_type_id" >
                                  <option value="">Select One</option>
                                  {{#each budgetcodetype}}
                                      <option value="{{this.id}}">{{this.budget_code_type}} - {{this.code}}</option>
                                  {{/each}}
                              </select>
                              
                          </div>
                      </div>
                  <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">Code</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control input-control" id="code" placeholder="Enter Code" name="code" value="{{body.code}}" >
                      
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="description" class="col-sm-2 control-label">Budget Code</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control input-control" id="budget_code" placeholder="Enter Budget Code" name="budget_code" value="{{body.budget_code}}" >
                      
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="remarks" class="col-sm-2 control-label">Remarks</label>
                    <div class="col-sm-10">
                      <textarea class="form-control input-control" id="remarks" placeholder="Enter Remarks" name="remarks" >{{body.remarks}}</textarea>
                      <span class="text-danger"></span>

                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

</section>

<script type="text/javascript">
$(document).ready(function(e){

  $(".input-control").on("keydown input", function(e) {
    if ((e.which === 32 && !this.value.length) || (e.shiftKey && (e.which == 188 || e.which == 190)))
        e.preventDefault();
  });

  $(".input-control").bind("copy paste", function(e){
    e.preventDefault();
  });

  $("#frmBudget").validate({
    rules: {
      budget_code_type_id: {
        required: true
      },
      code: {
        required:  true
      },
      budget_code: {
        required: true
      },
      remarks: {
        required: true
      }
    },
    messages: {
      budget_code_type_id: {
        required: "Please enter budget type"
      },
      code: {
        required:  "Please enter budget code"
      },
      budget_code: {
        required: "Please enter budget name"
      },
      remarks: {
        required: "Pleae enter remarks"
      }
    }
  });
});
</script>
