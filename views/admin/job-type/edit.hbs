<section class="content-header">
  <h1>
    Job Type
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin/dashboard">Dashboard</a></li>
    <li class="active">Job Type - <a href="/admin/group">Edit</a></li>
  </ol>
</section>

<section class="content">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">

              <li class="active"><a href="#settings" data-toggle="tab">Job Type - Edit</a></li>
            </ul>
            <div class="topbtn"><a href="" onclick="history.back()"><button type="button" class="btn bg-purple btn-rightad">Back</button></a></div>
            <div class="tab-content">

              	{{#if error_message}}
              	<div class="alert alert-danger" id="result77">
              	{{error_message}}
              	</div>
              	{{/if}}
               <div class="tab-pane active" id="settings">
                <form name="frmJobType" id="frmJobType" method="post" action="/admin/job-type/edit/{{job_details.id}}" class="form-horizontal" >

                  <div class="form-group required">
                    <label for="name" class="col-sm-2 control-label">Code</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control input-control" id="code" placeholder="Enter Job Code" name="code" value="{{job_details.code}}">
                      <span class="text-danger"></span>
                    </div>
                  </div>

                  <div class="form-group required">
                    <label for="description" class="col-sm-2 control-label">Job</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control input-control" id="industry" placeholder="Enter Job" name="job" value="{{job_details.job}}">
                      <span class="text-danger"></span>
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="remarks" class="col-sm-2 control-label">Remarks</label>

                    <div class="col-sm-10">
                      <textarea class="form-control input-control" id="remarks" placeholder="Enter Remarks" name="remark" >{{job_details.remark}}</textarea>
                      <span class="text-danger"></span>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">

                      <button type="submit" class="btn btn-danger">Submit</button>

                    </div>
                  </div>
                </form>
              </div>
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

</section>

<script type="text/javascript">
$(document).ready(function(e){

  $(".input-control").on("keydown input", function(e) {
    if ((e.which === 32 && !this.value.length) || (e.shiftKey && (e.which == 188 || e.which == 190)))
        e.preventDefault();
  });

  $(".input-control").bind("copy paste", function(e){
    e.preventDefault();
  });

  $("#frmJobType").validate({
    rules: {
      code: {
        required:  true
      },
      job: {
        required: true
      },
      // remarks: {
      //   required: true
      // }
    },
    messages: {
      code: {
        required:  "Please enter job type code"
      },
      job: {
        required: "Please enter job type name"
      },
      // remarks: {
      //   required: "Pleae enter remarks"
      // }
    }
  });
});
</script>
