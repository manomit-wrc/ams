<section class="content-header">
      <h1>
        Attorney Budget Report
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active">Attorney Budget Report</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">

          <div class="box">
            <div class="box-header">
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div id="success-msg"></div>
              {{#if succ_add_msg}}
                <div class="alert alert-success" id="result77">
                {{succ_add_msg}}
                </div>
              {{/if}}

              <form name="attorney_select" id="frmBudget" method="post" action="/admin/attorney-budget-report/listing" class="form-horizontal">

                  <div class="form-group required">
                    <label class="col-sm-2 control-label">Select Atorney</label>
                          <div class="col-sm-10">
                              <select class="form-control" name="attorney_id" id="attorney_id" >
                                  <option value="">Select One</option>
                                  {{#each attorney}}
                                      <option value="{{this.id}}">{{this.first_name}}&nbsp;{{this.last_name}}</option>
                                  {{/each}}
                              </select>
                          </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                  </div>
              </form>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
<script type="text/javascript">
  $(document).ready(function(){

      $("#frmBudget").validate({
          rules: {
              attorney_id: {
                  required: true
              }
          },
          message: {
              attorney_id: {
                  required: "Select an attorney"
              }
          }
      });
  });
</script>  