<section class="content-header">
      <h1>
        Employees List
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        
        <li class="active">Employees List</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
                             
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Employees List</h3>
            </div>
            <!-- /.box-header -->
            <div class="topbtn"><a href="/admin/add-employees"><button type="button" class="btn bg-purple btn-rightad">ADD</button></a></div>
            <div class="box-body">
              {{#if succ_add_msg}}
                <div class="alert alert-success" id="result77">
                {{succ_add_msg}}
                </div>
              {{/if}}
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Employee Staff Id</th>
                  <th>Name</th>
                  <th>Email Id</th>
                  <th>Firm Name</th>
                  <th>Gender</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                  {{#each empl}}
                  <tr>
                    <td>{{this.emp_staff_id}}</td>
                    <td>{{this.first_name}} {{this.last_name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.firm.name}}</td>
                    <td>{{this.gender}}</td>
                    <td><a href="/admin/employee/edit/{{this.id}}" >Edit</a>&nbsp;|&nbsp;<a href="/admin/employee/delete/{{this.id}}" onclick="return confirm('Are you sure?')">Delete</a></td></td>
                  </tr>       
                  {{/each}}      
                </tbody>
                
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>