<section class="content-header">
  <h1>
    Practice Area
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin/dashboard">Dashboard</a></li>
    <li class="active">Practice Area - Edit</li>
  </ol>
</section>

<section class="content">
        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">

              <li class="active"><a href="#settings" data-toggle="tab">Practice Area - Edit</a></li>
            </ul>
            <div class="topbtn"><a href="" onclick="history.back()"><button type="button" class="btn bg-purple btn-rightad">Back</button></a></div>
            <div class="tab-content">

              	{{#if error_message}}
              	<div class="alert alert-danger" id="result77">
              	{{error_message}}
              	</div>
              	{{/if}}
               <div class="tab-pane active" id="settings">
                <form name="frmPracticeArea" id="frmPracticeArea" method="post" action="/admin/practice-area/edit/{{practiceArea.id}}" class="form-horizontal" >

                  <div class="form-group required">
                    <label for="name" class="col-sm-2 control-label">Code</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control input-control" id="code" placeholder="Enter Practice Code" name="code" value="{{practiceArea.code}}">
                      <span class="text-danger"></span>
                    </div>
                  </div>

                  <div class="form-group required">
                    <label for="description" class="col-sm-2 control-label">Name</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control input-control" id="practice_name" placeholder="Enter Practice Name" name="practice_name" value="{{practiceArea.name}}">
                      <span class="text-danger"></span>
                    </div>
                  </div>

                  <div class="form-group ">
                    <label for="remarks" class="col-sm-2 control-label">Remarks</label>

                    <div class="col-sm-10">
                      <textarea class="form-control input-control" id="remarks" placeholder="Enter Remarks" name="remarks" >{{practiceArea.remarks}}</textarea>
                      <span class="text-danger"></span>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">

                      <button type="submit" class="btn btn-danger">Submit</button>

                    </div>
                  </div>
                </form>
              </div>
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

</section>

<script type="text/javascript">
$(document).ready(function(e){

  $(".input-control").on("keydown input", function(e) {
    if ((e.which === 32 && !this.value.length) || (e.shiftKey && (e.which == 188 || e.which == 190)))
        e.preventDefault();
  });

  $(".input-control").bind("copy paste", function(e){
    e.preventDefault();
  });

  $("#frmPracticeArea").validate({
    rules: {
      code: {
        required: true
      },
      practice_name: {
        required:  true
      },
      // remarks: {
      //   required:  true
      // }
    },
    messages: {
      code: {
        required: "Please enter practice area code"
      },
      practice_name: {
        required:  "Please enter practice area name"
      },
      // remarks: {
      //   required:  "Please enter remarks"
      // }
    }
  });
});
</script>
