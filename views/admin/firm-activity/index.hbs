<section class="content-header">
      <h1>
        Activity List
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active">Activity List</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">

          <div class="box">
            <div class="box-header">
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div id="success-msg"></div>
              {{#if succ_add_msg}}
                <div class="alert alert-success" id="result77">
                {{succ_add_msg}}
                </div>
              {{/if}}

              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>SL#</th>
                  <th>Attorney name</th>
                  <th>Activity type</th>
                  <th>Activity Name</th>
                  <th>Potential revenue</th>
                  <th>Activity reason</th>
                  <th>Activity status</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    {{#each details}}
                     <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.attorney_name}}</td>
                        <td>{{this.code.short_description}}</td>
                        <td>{{this.activity_name}}</td>                      
                        <td>{{this.potential_revenue}}</td>
                        <td>{{this.activity_reason}}</td>
                        <td>{{this.activitydetail.short_description}}</td>
                        <td><a href="/admin/firm-activity/view_budget_report/{{this.id}}" title="View budget report">View Budget</a></td>
                     </tr>
                    {{/each}}
                </tbody>

              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>