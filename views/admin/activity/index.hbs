<section class="content-header">
      <h1>
        Activity List
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active">Activity List</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">

          <div class="box">
            <div class="box-header">
            </div>
            <!-- /.box-header -->
            <div class="topbtn">
              <a href="/admin/activity/add"><button type="button" class="btn bg-purple btn-rightad">ADD</button></a>
            </div>
            <div class="box-body">
              <div id="success-msg"></div>
              {{#if succ_add_msg}}
                <div class="alert alert-success" id="result77">
                {{succ_add_msg}}
                </div>
              {{/if}}

              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>SL#</th>
                  <th>Attorney name</th>
                  <th>Activity type</th>
                  <th>Activity Name</th>
                  <th>Potential revenue</th>
                  <th>Activity reason</th>
                  {{!-- <th>Activity status</th> --}}
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    {{#each result}}
                     <tr>
                      <td>{{this.id}}</td>
                      <td>{{this.attorney_name}}</td>
                      <td>{{this.code.short_description}}</td>
                      <td>{{this.activity_name}}</td>                      
                      <td>{{this.potential_revenue}}</td>
                      <td>{{this.activity_reason}}</td>
                      {{!-- <td>{{this.activitydetails.short_description}}</td> --}}
                      <td><a href="/admin/target/edit/{{this.id}}" title="Edit">Edit</a>&nbsp;|&nbsp;<a href="/admin/activity/delete/{{this.id}}" onclick="return confirm('Are you sure?')" title="Delete">Delete</a></td>
                     </tr>
                    {{/each}}
                </tbody>

              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>

<script type="text/javascript">
  $(document).ready(function(e){
      $('#move_to_client').click(function(){
        if($('input[type="checkbox"]').prop("checked") == true){
          var checked_ids = [];
          $("input[name='target_ck[]']:checked").each(function (i) {               
              checked_ids[i] = $(this).val();            
          });            
          checked_ids = JSON.stringify(checked_ids);            
          checked_ids = JSON.parse(checked_ids);
          if(checked_ids){
            $.ajax({
                type: "POST",
                url: "/admin/target/move_to_client",
                data: {checked_ids:checked_ids},
                async: false,
                success:function(response) {
                    
                      $("#success-msg").html('<div class="alert alert-success" id="result77">Successfully moved to client</div>');
                      setTimeout(function(){
                          window.location.reload();
                      }, 1000);
                    
                }
            });
          }
        } else {
          $("#success-msg").html('<div class="alert alert-danger" id="result77">No master contact checked</div>');
        } 
      });
  });
</script>
