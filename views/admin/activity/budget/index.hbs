<section class="content-header">
      <h1>
        Activity Budget List
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active">Activity Budget List</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">

          <div class="box">
            <div class="box-header">
            </div>
            <!-- /.box-header -->
            <div class="topbtn">
              {{#if budget_count}}
                <a href="/admin/activity/budget/edit/{{activity_id}}"><button type="button" class="btn bg-purple btn-rightad">Edit Budget Report</button></a>
              {{else}}
                <a href="/admin/activity/budget/add/{{activity_id}}"><button type="button" class="btn bg-purple btn-rightad">Add</button></a>
              {{/if}}
            </div>
            <div class="box-body">
              <div id="success-msg"></div>
              {{#if succ_add_msg}}
                <div class="alert alert-success" id="result77">
                {{succ_add_msg}}
                </div>
              {{/if}}

              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>SL#</th>
                  <th>Budget code</th>
                  <th>Budget code hours</th>
                  <th>Budget code cost</th>
                  <th>Budget details status</th>
                </tr>
                </thead>
                <tbody>
                    {{#each details}}
                     <tr>
                      <td>{{this.id}}</td>
                      {{#if this.budget_code}}
                        <td>{{this.budget_code}}</td>
                      {{else}}
                        <td>N/A</td>
                      {{/if}}
                      {{#if this.budget_code_hours}}
                        <td>{{this.budget_code_hours}}</td>
                      {{else}}
                        <td>N/A</td>
                      {{/if}}
                      {{#if this.budget_code_cost}}
                        <td>{{this.budget_code_cost}}</td>
                      {{else}}
                        <td>N/A</td> 
                      {{/if}}                
                      <td>{{this.budget_dtl_status}}</td>
                     </tr>
                    {{/each}}
                </tbody>

              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>