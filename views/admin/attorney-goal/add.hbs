<section class="content-header">
  <h1>
    Attorney Goal
    <small>Add</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
    <a href="/admin/attorney-goal"><button type="button" class="btn bg-purple btn-rightad" style="padding: 2px 5px 2px 5px;margin: -1px 2px 2px 8px;">Back</button></a>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <!-- SELECT2 EXAMPLE -->
  <div class="box box-default">
    <!-- /.box-header -->
    <div class="box-body">
      <div class="row">
        {{#if error_message}}
        <div class="alert alert-danger" id="result77">
        {{error_message}}
        </div>
        {{/if}}
        <form name="frmClient" id="frmClient" method="POST" action="/admin/attorney-goal/add">
          <input type="hidden" name="firm_id" id="firm_id" class="form-control" value = "{{user.id}}">
          <div class="col-md-6">

          <div class="form-group required">
            <div class="form-group required">
                <label>Select Attorney</label>
                <select class="form-control" style="width: 100%;" id="attorney_id" name="attorney_id">
                  <option value="">Select Any</option>
                  {{#each attorney}}
                    <option value="{{this.id}}">{{this.first_name}}&nbsp;{{this.last_name}}</option>
                  {{/each}}
                </select>
            </div>

            <div class="form-group organisation required">
              <label>Current Year</label>
              <select class="form-control" style="width: 100%;" id="current_year" name="current_year">
                  <option value="">Select Current year</option>
                  {{#for 2017 2200 1}}
                      <option value="{{this}}">{{this}}</option>
                  {{/for}}
              </select>
          </div>
          <div class="form-group fname required">
            <label>Current Year Goal</label>
            <input type="text" name="current_year_goal" id="current_year_goal" class="form-control" placeholder="Current Year Goal">
          </div>
          <div class="form-group lname required">
            <label>Current Year Goal %</label>
            <input type="text" name="goal_percentage" id="goal_percentage" class="form-control" placeholder="Current Year Goal Percentage">
          </div>
          <div class="form-group required">
            <label>Summary</label>
            <input type="text" name="summary" id="summary" class="form-control" placeholder="Summary">
          </div>
          <div class="form-group">
            <label>Remarks</label>
            <textarea name="remarks_notes" id="remarks_notes" class="form-control"></textarea>
          </div>
        </div>

        <div class="col-md-12">
          <div class="form-group">

            <button type="submit" class="btn btn-danger">Submit</button>

          </div>
        </div>
        </form>

      </div>
      <!-- /.row -->
    </div>

  </div>


</section>
<script type="text/javascript">
$(document).ready(function(e){

  // to prevent alphabet character

  jQuery('#goal_percentage').keyup(function() {
        this.value = this.value.replace(/[^0-9\%]/g, '');
  });
  //end

  $("#current_year_goal").inputmask("numeric", {
        radixPoint: ".",
        groupSeparator: ",",
        digits: 2,
        autoGroup: true,
        prefix: '$ ', 
        rightAlign: false
  });

  $("#frmClient").validate({
    rules: {
      attorney_id: {
        required: true
      },
      current_year: {
        required: true
      },
      current_year_goal: {
        required:  true
      },
      goal_percentage: {
        required:  true
      },
      summary: {
        required:  true,
      }
    },
    messages: {
      attorney_id: {
        required: "Select an attorney"
      },
      current_year: {
        required: "Please select current year"
      },
      current_year_goal: {
        required:  "Please enter current year goal"
      },
      goal_percentage: {
        required:  "Please enter goal percentage"
      },
      summary: {
        required:  "Please enter summary",
      }
    }
  });

});
</script>
