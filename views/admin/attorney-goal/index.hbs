<section class="content-header">
      <h1>
        Attorney Goal List
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active">Attorney Goal List</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">

          <div class="box">
            <div class="box-header">
            </div>
            <!-- /.box-header -->
            <div class="topbtn"><a href="/admin/attorney-goal/add"><button type="button" class="btn bg-purple btn-rightad">ADD</button></a></div>
            <div class="box-body">
              {{#if succ_add_msg}}
                <div class="alert alert-success" id="result77">
                {{succ_add_msg}}
                </div>
              {{/if}}
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Attorney Name</th>
                  <th>Current Year</th>
                  <th>Current Year Goal</th>
                  <th>Goal Percentage</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    {{#each result}}
                     <tr>
                      <td>{{this.admin.first_name}}&nbsp;{{this.admin.last_name}}</td>
                      <td>{{this.current_year}}</td>
                      <td>{{this.current_year_goal}}</td>                   
                      <td>{{this.goal_percentage}}%</td>
                      <td><a href="/admin/attorney-goal/edit/{{this.id}}" >Edit</a>&nbsp;|&nbsp;<a href="/admin/attorney-goal/delete/{{this.id}}" onclick="return confirm('Are you sure?')">Delete</a></td>
                     </tr>
                    {{/each}}
                </tbody>

              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
