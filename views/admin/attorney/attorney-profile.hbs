<section class="content-header">
      <h1>
        Add Attorney

      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li><a href="/admin/firm">Attorney</a></li>
        <li class="active">Add</li>
      </ol>

      <section class="content">

      <div class="row">

        <div class="col-md-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs tab-list">
              <li class="active tab" id="attorney-address-tab"><a href="#attorney-activity" data-toggle="tab" aria-expanded="true">Address Details</a></li>
              <li class="tab" id="attorney-details-tab"><a href="#attorney-generalInfo" data-toggle="tab" aria-expanded="false">General Information</a></li>
              <li class="tab" id="attorney-photo-tab"><a href="#attorney-picture" data-toggle="tab" aria-expanded="false">Upload Photo</a></li>
            </ul>
            <div class="tab-content">
            <div id="success-msg"></div>
            <div id="alert-msg"></div>
              <!-- /@@@@@@@@@@@@ first tab @@@@@@@@@@@@@@/ -->
              <div class="tab-pane active" id="attorney-activity">
                <form class="form-horizontal" name="attorney_address" id="attorney_address" method="post">
                  <div class="form-group">
                    <label for="address" class="col-sm-2 control-label">Address Line 1</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="address" name="address" placeholder="Address 1" value="{{user_details.address}}">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="address_2" class="col-sm-2 control-label">Address Line 2</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="address_2" name="address_2" placeholder="Address 2" value="{{user_details.address_2}}">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="address_3" class="col-sm-2 control-label">Address Line 3</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="address_3" name="address_3" placeholder="Address 3" value="{{user_details.address_3}}">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="phone_no" class="col-sm-2 control-label">Phone No</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="phone_no" name="phone_no" placeholder="Phone" value="{{user_details.phone_no}}">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="country_id" class="col-sm-2 control-label">Country</label>

                    <div class="col-sm-10">
                      <select class="form-control col-sm-2" id="attorney_country_id" name="attorney_country_id">
                        <option value="">Select Country</option>
                        {{#each countries}}
                          <option value="{{this.id}}" {{#if_eq this.id ../user_details.country_id}} selected = "selected" {{/if_eq}}>{{this.name}}</option>
                        {{/each}}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="state_id" class="col-sm-2 control-label">State</label>

                    <div class="col-sm-10">
                      <select class="form-control col-sm-2" id="attoney_state_id" name="attoney_state_id">
                        <option value="">Select State</option>
                        {{#each states}}
                          <option value="{{this.id}}" {{#if_eq this.id ../user_details.state_id}} selected = "selected" {{/if_eq}}>{{this.name}}</option>
                        {{/each}}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="city_id" class="col-sm-2 control-label">City</label>

                    <div class="col-sm-10">
                      <select class="form-control col-sm-2" id="attoney_city_id" name="attoney_city_id">
                        <option value="">Select City</option>
                        {{#each cities}}
                          <option value="{{this.id}}" {{#if_eq this.id ../user_details.city_id}} selected = "selected" {{/if_eq}}>{{this.name}}</option>
                        {{/each}}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="zipcode" class="col-sm-2 control-label">Pincode</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="attorney_zip_code" name="attorney_zip_code" placeholder="Pincode" value="{{user_details.zipcode}}">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="fax" class="col-sm-2 control-label">Fax</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="fax" name="fax" placeholder="Fax" value="{{user_details.fax}}">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="mobile" class="col-sm-2 control-label">Mobile</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="mobile" name="mobile" placeholder="Mobile" value="{{user_details.mobile}}">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="website" class="col-sm-2 control-label">Website URL</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="website" name="website" placeholder="Website Url" value="{{user_details.website}}">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="social" class="col-sm-2 control-label">Social URL</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="social" name="social" placeholder="Social Url" value="{{user_details.social}}">
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                  </div>
                </form>
              </div>

              <!-- /@@@@@@@@@@@@ second tab @@@@@@@@@@@@@@/ -->
              <div class="tab-pane" id="attorney-generalInfo">
                <form class="form-horizontal" name="attorney_general_info" id="attorney_general_info" method="POST">
                  <div class="form-group">
                    <label for="inputName" class="col-sm-2 control-label">User Name</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="user_name" name="user_name" placeholder="User Name" value="{{user.email}}" readonly="readonly">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputExperience" class="col-sm-2 control-label">Group</label>
                    <div class="col-sm-10">
                      <select name="group" id="group" class="form-control">
                          <option value="">Select Group</option>
                          {{#each group}}
                          <option value="{{this.id}}" {{#if_eq this.id ../user_details.group_id}}selected="selected"{{/if_eq}}>{{this.group}}</option>
                          {{/each}}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputExperience" class="col-sm-2 control-label">Section</label>
                    <div class="col-sm-10">
                      <select name="sections[]" id="sections" multiple="multiple" class="multiselect-ui form-control">
                          {{#each section}}
                          <option value="{{this.id}}" {{#inArray ../section_array this.id}} selected="selected"{{/inArray}}>{{this.name}}</option>
                          {{/each}}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputExperience" class="col-sm-2 control-label">Designation</label>
                    <div class="col-sm-10">
                      <select name="designation" id="designation" class="form-control">
                          <option value="">Select Designation</option>
                          {{#each designation}}
                          <option value="{{this.id}}" {{#if_eq this.id ../user_details.designation_id}}selected="selected"{{/if_eq}}>{{this.designation}}</option>
                          {{/each}}
                      </select>
                    </div>
                  </div>


                  <div class="form-group">
                    <label for="inputName" class="col-sm-2 control-label">Attorney Code</label>

                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="attorney_code" name="attorney_code" placeholder="Attorney Code" value="{{attorney_details.code}}">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputExperience" class="col-sm-2 control-label">Attorney Type</label>
                    <div class="col-sm-10">
                      <select name="attorney_type" id="attorney_type" class="form-control">
                          <option value="">Select Attornry Type</option>
                          {{#each attorneytype}}
                          <option value="{{this.id}}"{{#if_eq this.id ../attorney_details.attorney_type_id}} selected="selected" {{/if_eq}}>{{this.attorney}}</option>
                          {{/each}}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputName" class="col-sm-2 control-label">Education</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="education" name="education" placeholder="Education" value="{{attorney_details.education}}">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputName" class="col-sm-2 control-label">Bar Registration</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="bar_reg" name="bar_reg" placeholder="Bar Registration" value="{{attorney_details.bar_reg}}">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputExperience" class="col-sm-2 control-label">Job Type</label>
                    <div class="col-sm-10">
                      <select name="job_type" id="job_type" class="form-control">
                          <option>Select Job Type</option>
                          {{#each jobtype}}
                          <option value="{{this.id}}" {{#if_eq this.id ../attorney_details.job_type_id}} selected="selected" {{/if_eq}}>{{this.job}}</option>
                          {{/each}}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputName" class="col-sm-2 control-label">Practice Date</label>
                    <div class="col-sm-10">
                      <input type="text" id="practice_date" name="practice_date" value="{{attorney_details.practice_date}}"  placeholder="DD-MM-YYYY" class="form-control">

                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputName" class="col-sm-2 control-label">Firm Join Date</label>
                    <div class="col-sm-10">
                      <input type="text" id="firm_join_date" name="firm_join_date" value="{{attorney_details.firm_join_date}}"  placeholder="DD-MM-YYYY" class="form-control">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputExperience" class="col-sm-2 control-label">Jurisdiction</label>
                    <div class="col-sm-10">
                      <select name="jurisdictions[]" id="jurisdictions" multiple="multiple" class="form-control">
                          {{#each jurisdiction}}
                          <option value="{{this.id}}" {{#inArray ../jurisdiction_array this.id}} selected="selected"{{/inArray}}>{{this.jurisdiction}}</option>
                          {{/each}}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputExperience" class="col-sm-2 control-label">Practice Area</label>
                    <div class="col-sm-10">
                      <select name="practice_area[]" id="practice_area" multiple="multiple" class="form-control">
                          {{#each practice_area}}
                          <option value="{{this.id}}" {{#inArray ../practice_area_array this.id}} selected="selected" {{/inArray}}>{{this.name}}</option>
                          {{/each}}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="inputExperience" class="col-sm-2 control-label">Industry Type</label>
                    <div class="col-sm-10">
                      <select name="industry_type" id="industry_type" class="form-control">
                          <option value="">Select Industry Type</option>
                          {{#each industry_type}}
                          <option value="{{this.id}}" {{#if_eq this.id ../attorney_details.industry_type_id}} selected="selected" {{/if_eq}}>{{this.industry}}</option>
                          {{/each}}
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="social" class="col-sm-2 control-label">Remarks</label>

                    <div class="col-sm-10">
                      <textarea class="form-control" id="remarks" name="remarks" placeholder="Remarks">{{user_details.remarks}}</textarea>
                    </div>
                  </div>

                  
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                  </div>
                </form>
              </div>

              <!-- /@@@@@@@@@@@@ fourth tab @@@@@@@@@@@@@@/ -->
              <div class="tab-pane" id="attorney-picture">
                <form class="form-horizontal" id="attorney_image_form" name="attorney_image_form" method="POST" enctype="multipart/form-data">
                  <div style=" width: 100%; display: inline-block;">
                  <h3 class="hint">Profile Picture</h3>
                  <div class="form-group" style="margin-left:0px;">
                      <div class="fileinput fileinput-new" data-provides="fileinput">
                          <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                              <img src="{{image}}" alt="" class="profile-image"/>
                          </div>
                          {{!-- <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div> --}}
                          <div style=" height: 60px">
                              <span class="btn default btn-file">
                                  <span class="fileinput-new"> Select image </span>
                                  <input type="file" name="profile_photo" id="profile_photo" class="control-label">
                          </div>
                      </div>
                      <div class="clearfix margin-top-10">
                          <span class="label label-danger" style=" margin-right:10px ">NOTE! </span>
                          <span>Firm image thumbnail is supported in Latest Firefox, Chrome, Opera, Safari and Internet Explorer 10 only </span>
                      </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10" style="margin-left:0px;">
                      <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    <div>

</section>
</section>
