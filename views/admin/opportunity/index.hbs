<section class="content-header">
      <h1>
        Opportunity List
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active">Opportunity List</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">

          <div class="box">
            <div class="box-header">
            </div>
            <!-- /.box-header -->
            <div class="topbtn"><a href="/admin/opportunity/add"><button type="button" class="btn bg-purple btn-rightad">ADD</button></a></div>
            <div class="box-body">
              {{#if succ_add_msg}}
                <div class="alert alert-success" id="result77">
                {{succ_add_msg}}
                </div>
              {{/if}}
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Attorney Name</th>
                  <th>Referred By</th>
                  <th>Referrel Type</th>                 
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    {{#each opportunity}}
                     <tr>
                      <td>{{this.opportunity_name}}</td>
                      <td>{{this.admin.first_name}}&nbsp;{{this.admin.last_name}}</td>
                      <td>{{this.mastercontact.first_name}}&nbsp;{{this.mastercontact.last_name}}</td>
                      {{#if_eq this.referrel_type 'M'}}
                        <td>Master Contact</td>
                      {{/if_eq}}
                      {{#if_eq this.referrel_type 'R'}}
                        <td>Referral</td>
                      {{/if_eq}}
                      {{#if_eq this.referrel_type 'C'}}
                        <td>Client</td>
                      {{/if_eq}}
                      {{#if_eq this.referrel_type 'T'}}
                        <td>Target</td>
                      {{/if_eq}}
                      <td><a href="/admin/opportunity/edit/{{this.id}}" >Edit</a>&nbsp;|&nbsp;<a href="/admin/opportunity/delete/{{this.id}}" onclick="return confirm('Are you sure?')">Delete</a></td>
                     </tr>
                    {{/each}}
                </tbody>

              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
