<section class="content-header">
      <h1>
        Budget Report Per Period
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active">Budget Report Per Period</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">

          <div class="box">
            <div class="box-header">
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div id="success-msg"></div>
              {{#if succ_add_msg}}
                <div class="alert alert-success" id="result77">
                {{succ_add_msg}}
                </div>
              {{/if}}

              <form name="attorney_select" id="frmBudget" method="post" action="/admin/budget-report-per-period/listing" class="form-horizontal">

                  <div class="form-group required">
                    <label class="col-sm-2 control-label">Search By</label>
                          <div class="col-sm-10">
                              <select class="form-control" name="search_by" id="search_by">
                                  <option value="">Select One</option>
                                  <option value="fortnight">Last fortnight</option>
                                  <option value="last_month">Last month</option>
                                  <option value="last_six_month">Last 6 months</option>
                                  <option value="last_year">Last year</option>
                                  <option value="custom">Custom</option>
                              </select>
                          </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                  </div>

                  <div class="col-md-12 custom_div" style="display: none; margin-top: 10px;">
                    <div class="form-group required">
                      <label class="col-md-2 control-label">Date:</label>
                      <div class="col-md-4">
                          <input type="text" class="form-control" id="from_date" placeholder="From date" name="from_date">
                          <span class="help-block">  </span>
                      </div>
                      <div class="col-md-4">
                          <input type="text" class="form-control" id="to_date" placeholder="To date" name="to_date">
                          <span class="help-block">  </span>
                      </div>
                    </div>
                  </div>
              </form>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
<script type="text/javascript">
$(document).ready(function(e){
    $('#search_by').change(function(){ 
        if($(this).val()=='custom') {
            $('.custom_div').css('display','block');
        } else {
            $('.custom_div').css('display','none');
        }
    });

    $('#from_date').datepicker({
          autoclose: true,
          format: 'yyyy-mm-dd'
    });

    var date = new Date();
    var currentDate = date.getDate();
    $('#to_date').datepicker({
          autoclose: true,
          format: 'yyyy-mm-dd',
          endDate: date
    });
});
</script>