<section class="content-header">
      <h1>
        Budget Report
      </h1>
      <h4 style="text-align:center;margin-top: -20px;"><strong>{{text}}</strong></h4>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active"><a href="/admin/budget-report-per-period">Report per period</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">

          <div class="box">
            <div class="box-header">
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div id="success-msg"></div>
              {{#if succ_add_msg}}
                <div class="alert alert-success" id="result77">
                {{succ_add_msg}}
                </div>
              {{/if}}

              <table id="report_table" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>SL#</th>
                  <th>Attorney Name</th>
                  <th>Hours</th>
                  <th>Cost</th>
                  <th>Status</th>
                  <th>Created On</th>
                </tr>
                </thead>
                <tbody>
                    {{#each result}}
                     <tr>
                        <td>{{inc @index}}</td>
                        <td><a href="/admin/budget-report-per-period/report-per-attorney/{{this.attorney_id}}">{{this.first_name}}&nbsp;{{this.last_name}}</a></td>
                        <td>{{integer this.hours}}</td>                      
                        <td>{{integer this.cost}}</td>
                        <td>{{this.budget_dtl_status}}</td>
                        <td>{{dateFormat this.createdAt 'DD-MM-YYYY'}}</td>
                     </tr>
                    {{/each}}
                </tbody>
                <tr>
                  <td width="10%" style=" text-align:right; height: 35px; vertical-align: middle; text-align: center;"><strong>Sub-total</strong></td>
                  <td width="20%" style=" padding:0; text-align:center" height="35px;"></td>
                  <td width="20%">
                      <table width="100%" style=" height: 35px">
                          <tbody><tr>
                              <td width="100%" style=" height: 35px; border-right: 1px solid #e7ecf1; background:#ddd; color:#000; font-weight:800; vertical-align: middle; text-align: center;">
                                  <strong>{{sum_hours}} hrs</strong>
                              </td>
                          </tr>
                      </tbody></table>
                  </td>
                  <td width="20%">
                      <table width="100%" style=" height: 35px">
                          <tbody><tr>
                              <td width="100%" style=" height: 35px; border-right: 1px solid #e7ecf1; background:#ddd; color:#000; font-weight:800; vertical-align: middle; text-align: center;">
                                  <strong>$ {{sum_cost}}</strong>
                              </td>
                          </tr>
                      </tbody></table>
                  </td>
              </tr>

              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
